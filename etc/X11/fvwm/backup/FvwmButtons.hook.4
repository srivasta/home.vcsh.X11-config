# E.1 FvwmButtons

# Colors
*FvwmButtonsFore Black
*FvwmButtonsBack #908090

*FvwmButtonsBoxSize smart
*FvwmButtonsRows 5

*FvwmButtonsPadding 2 4

# Font
*FvwmButtonsFont -adobe-helvetica-bold-r-*-*-10-*-*-*-*-*-*-*
*FvwmButtonsGeometry -1+1

# Define the buttons to use.....

*FvwmButtons(Container(Rows 5, Frame 3, Padding 2 4))

# The leftmost 4 buttons (next,prev,lower,raise)
*FvwmButtons(4x4,Container(Fore MistyRose,Back DimGray, \
                           Rows 4,Frame 3, Padding 2 4))
*FvwmButtons(1x2,Title Next,     Icon  arrow.xpm    Action "Desk  1 0")
*FvwmButtons(1x2,Title Prev,     Icon  arrowb.xpm   Action "Desk -1 0")
*FvwmButtons(1x2,Title Lower,    Icon Down,         Action Lower)
*FvwmButtons(1x2,Title Raise,    Icon Up,           Action Raise)
*FvwmButtons(End)

# Add in the pager ....
*FvwmButtons(8x4,Container(Rows 4,Frame -3, Padding 2 4))
*FvwmButtons(8x4, Swallow(UseOld) "FvwmPager" `FvwmPager 0 1` Frame -3)
*FvwmButtons(End)

*FvwmButtons(16x4,Container(Fore honeydew,Back DimGray,Rows 4, Frame -4, Padding 2 4))
*FvwmButtons(16x1,Frame -4, Swallow(UseOld,NoKill) "xticktalk" \
  `Exec nice -15 xticktalk -before -approximate -fg honeydew -bg DimGray \
       -fn '-adobe-times-bold-r-*-*-20-*-*-*-*-*-*-*' -geometry -1500-1500&`)


*FvwmButtons(6x3,Container(Fore MidnightBlue,Back Gray55, \
                           Rows 3,Frame 2, Padding 2 4))
*FvwmButtons(3x3,Title Wth,Swallow(UseOld,NoKill) "wmWeather" \
   `Exec nice -15 wmWeather -s KMOB &`)
*FvwmButtons(3x3,Title Mon,Swallow(UseOld,NoKill) "wmmon" \
    `Exec nice -19 wmmon &`)
*FvwmButtons(End)

*FvwmButtons(10x3,Container(Fore MidnightBlue,Back Gray55,Rows 3))
*FvwmButtons(10x1,Frame -4, Swallow(UseOld,NoKill) "xclock" \
   `Exec nice xclock -digital -padding 0 -bg DimGray -update 10  \
       -fn '-adobe-times-bold-r-*-*-20-*-*-*-*-*-*-*' -geometry -1500-1500&`)


*FvwmButtons(4x2,Frame -4, Swallow(UseOld,NoKill) "xload" \
 `Exec nice -15 xload -label $HOSTDISPLAY -fg honeydew \
    -bg DimGray  -geometry -1500-1500 &`)
*FvwmButtons(2x2,Frame -4, Swallow(UseOld,NoKill) "oclock" \
  `Exec nice oclock -jewel Blue -minute Red \
		-hour Red -geometry -1500-1500 -bg DimGray &`)

*FvwmButtons(2x2,Swallow(UseOld,NoKill,Respawn) "wmifs" \
   `Exec nice wmifs -w  `)
*FvwmButtons(2x2,Fore BLUE,Frame 3,Title Root, Icon supermn1.xpm, \
             Action  `Exec "Root" exec xterm -T Root -e \
             /bin/su -c '/bin/bash  -rcfile \
             "~srivasta/.rootrc" -i' root&`)


*FvwmButtons(End)

*FvwmButtons(End)

# Now come the bottom row buttons:
*FvwmButtons(28x1,Container(Fore CornSilk,Back DarkSlateGray, Rows 1))
*FvwmButtons(4x1, Title Utils,         Action "Popup Utilities")
*FvwmButtons(4x1, Title Window,        Panel (down)  WinOps )
*FvwmButtons(4x1, Title Misc,          Action "Function general_ops_func")
*FvwmButtons(16x1,Size 378 20,Swallow(UseOld,NoKill,Respawn) "xbuffy" \
    `Exec xbuffy -geometry 370x20 -bg Gray17 -fg CornSilk -fill -center -horiz -boxfile ~/etc/xbuffy  &`)
*FvwmButtons(End)


*FvwmButtons(End)

